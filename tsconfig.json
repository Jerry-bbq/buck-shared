    "target": "ESNext",
    "module": "ESNext",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist/types",
    "skipLibCheck": true,
    "removeComments": true,
    "moduleResolution": "node",
  },
  "include": ["packages/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
